extends layout
block content
	.container
		h1 Log In
		p Please Log In using the form below
		form(method="post",action="/users/login")
			.form-group
				label User Name
				input.form-control(name="username",type="text",placeholder="Enter Name")
			.form-group
				label Password
				input.form-control(name="password",type="password",placeholder="Enter Password")
			input.btn.btn-default(name="login",value="Log In", type="submit")

